# Compilador que ser치 utilizado
CC=g++

# flags de compilaci칩n
CFLAGS=-g -Wall -std=c++11

# flags de linkeo
LDFLAGS=

# Agregar ac치 los archivos .cpp a compilar
SOURCES=ejercicio3.cpp 

# Objetos que ser치n generados
OBJECTS=ejercicio3.o 

# Nombre del ejecutable a generar
EXECUTABLE=ej3

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(CFLAGS) $(OBJECTS) -o $@

clean:
	rm -rf $(EXECUTABLE) $(OBJECTS)

%.o: %.cpp
	$(CC) $(CFLAGS) $< -c -o $@
